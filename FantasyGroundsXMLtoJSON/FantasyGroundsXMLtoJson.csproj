      <HintPath>..\..\..\..\..\..\Program Files\Saxonica\SaxonHE10.8N\bin\IKVM.OpenJDK.Localedata.dll</HintPath>
    </Reference>
    <Reference Include="IKVM.OpenJDK.Text">
      <HintPath>..\..\..\..\..\..\Program Files\Saxonica\SaxonHE10.8N\bin\IKVM.OpenJDK.Text.dll</HintPath>
    </Reference>
    <Reference Include="IKVM.OpenJDK.Util">
