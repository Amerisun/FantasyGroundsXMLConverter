<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <StartupObject>WinFormsApp1.Program</StartupObject>
    <ApplicationIcon>Logo-180x180.ico</ApplicationIcon>
    <Company>Amerisun Gaming and Tech</Company>
    <Description>This is a simple application that does XSL transforms, specifically to transform Fantasy Grounds XML characters to Json format for the DarylBuckle character sheets printing.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Logo-180x180.ico" />
  </ItemGroup>

  <ItemGroup>
